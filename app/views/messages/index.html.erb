<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div id="new_message">
    <%= render partial: "messages/form", locals: {message: Message.new} %>
  </div>

  <div id="messages" class="min-w-full">
    <%= render @messages %>
  </div>
</div>
